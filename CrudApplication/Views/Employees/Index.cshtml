@model List<CrudApplication.Models.Domain.Employee>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h4> Displayed table</h4>

<table class="table table-striped mt-5">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date of Birth</th>
            <th>Department</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        
            @foreach (var employee in Model)

            {

            <tr>

                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd/mm/yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">View</a></td>
                <td><a href="Employees/View/@employee.Id">Delete</a></td>

            </tr>

            }
                              
            
    </tbody>
</table>